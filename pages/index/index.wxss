.official-account {
  height: 160rpx;
}

.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  padding-top: 60rpx;
  padding-bottom: 250rpx;
}

.location-wrapper {
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)!important;
  border: none!important;
  padding: 0!important;
}

.location {
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon {
  width: 21rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.location-text {
  opacity: 0.5;
}

.location-tips {
  margin-top: 10rpx;
  text-align: center;
  opacity: 0.5;
  height: 42rpx;
}

.weather-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 20rpx 30rpx; /*上 左右 下*/
  /*border-bottom: 1px solid rgba(0, 0, 0, 0.1);*/
}

.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.timetips-text {
  font-size: 35rpx;
  line-height: 90rpx;
  opacity: 0.5;
}

.forecast-list {
  display: flex;
}

.forecast-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 187rpx;
  align-items: center;
  border-right: 1px solid rgba(0, 0, 0, 0.1);
}

.forecast-item:last-child {
  border-right: none;
}

.forecast-time {
  font-size: 38rpx;
  line-height: 53rpx;
}

.forecast-weather {
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
}

.forecast-temp {
  font-size: 35rpx;
  line-height: 49rpx;
}

.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 30rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 35rpx;
  line-height: 49rpx;
  opacity: 0.5;
}

.temp-text {
  flex-grow: 1;
  text-align: right;
}

.wind-text {
  padding-left: 60rpx;
}

.arrow-icon {
  padding-left: 20rpx;
  width: 13rpx;
  height: 24rpx;
}


